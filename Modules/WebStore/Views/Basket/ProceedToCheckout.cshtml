@model WebStore.Models.Paypal.IndexViewModel
<html>
    <body onload="document.paypalForm.submit()">
        <form name="paypalForm" method="post" action="@Model.Target" >
            <input type="hidden" name="business" value="@Model.Business" />
            <input type="hidden" name="cmd" value="_xclick" />
            <input type="hidden" name="return" value="@Model.ReturnUrl" />

            <input type="hidden" name="item_name" value="WebStore Order number @Model.OrderNumber" />
            <input type="hidden" name="amount" value="@Model.Price" />
            <input type="hidden" name="currency_code" value="@Model.CurrencyCode" />
        </form>
    </body>
</html>